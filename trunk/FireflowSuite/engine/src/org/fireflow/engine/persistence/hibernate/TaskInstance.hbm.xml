<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.fireflow.engine.impl.TaskInstance" table="T_FF_RT_TASKINSTANCE" dynamic-update="true">
		<id name="id" type="java.lang.String">
			<column name="ID" length="50"/>
			<generator class="uuid.hex"/>
		</id>
		<property name="taskId" type="java.lang.String" update="false">
			<column name="TASK_ID" length="50" not-null="true" />
		</property>
		<property name="activityId" type="java.lang.String" update="false">
			<column name="ACTIVITY_ID" length="50" not-null="true"/>
		</property>		
		<property name="name" type="java.lang.String" update="false">
			<column name="NAME" length="50" not-null="true" ></column>
		</property>
		<property name="displayName" type="java.lang.String">
			<column name="DISPLAY_NAME" length="128"></column>
		</property>
		<property name="state" type="java.lang.Integer">
			<column name="STATE" length="1"/>
		</property>
		<property name="taskType" type="java.lang.String">
			<column name="TASK_TYPE" length="15"/>
		</property>		
		<property name="createdTime" type="java.util.Date"  update="false">
			<column name="CREATED_TIME" not-null="true"/>
		</property>
		<property name="startedTime" type="java.util.Date" >
			<column name="STARTED_TIME"></column>
		</property>
		<property name="expiredTime" type="java.util.Date" >
			<column name="EXPIRED_TIME"></column>
		</property>
		<property name="endTime" type="java.util.Date">
			<column name="END_TIME"></column>
		</property>
		<property name="completionStrategy" type="java.lang.String" update="false">
			<column name="COMPLETION_STRATEGY"  not-null="true"/>
		</property>
		
		<many-to-one name="processInstance"
			class="org.fireflow.engine.impl.ProcessInstance"
			column="PROCESSINSTANCE_ID"
			update="false"
			not-null="true"
			lazy="false"
			fetch="join"
			cascade="none"/>
		
		<!-- 
		<set name="workItems"
			 cascade="save-update,delete,all-delete-orphan"
			inverse="true"
			lazy="false"
			order-by="END_TIME DESC">
			<key column="TASKINSTANCE_ID"/>
			<one-to-many class="org.fireflow.engine.impl.WorkItem"/>
		</set>
		 -->
	</class>
</hibernate-mapping>