		<property name="processId" type="java.lang.String" update="false">
			<column name="PROCESS_ID" length="50" not-null="true" />
		</property>		
		<property name="name" type="java.lang.String" update="false">
			<column name="NAME" length="100"/>
		</property>
		<property name="displayName" type="java.lang.String" >
			<column name="DISPLAY_NAME" length="128"/>
		</property>
		<property name="state" type="java.lang.Integer">
			<column name="STATE"></column>
		</property>
		<property name="parentProcessInstanceId" type="java.lang.String">
			<column name="PARENT_PROCESSINSTANCE_ID"></column>
		</property>
