<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.fireflow.engine.impl.JoinPoint" table="T_FF_RT_JOINPOINT">
    <id name="id" type="java.lang.String">
      <column length="50" name="ID"/>
      <generator class="uuid.hex"/>
    </id>
    <property name="synchronizerId" type="java.lang.String" update="false">
      <column length="50" name="SYNCHRONIZER_ID" not-null="true"/>
    </property>
    <property name="value" type="java.lang.Integer">
      <column name="VALUE"/>
    </property>
    <property name="alive" type="java.lang.Boolean">
      <column name="ALIVE"/>
    </property>
    <set lazy="false" name="appointedTransitionNames" table="T_FF_RT_APPOINTED_TRANS_NAME">
      <key column="JOINPOINT_ID"/>
      <element column="TRANSITION_NAME" not-null="true" type="java.lang.String"/>
    </set>
    <many-to-one cascade="none" class="org.fireflow.engine.impl.ProcessInstance" column="PROCESSINSTANCE_ID" lazy="false" name="processInstance" not-null="true" update="false"/>
  </class>
</hibernate-mapping>
