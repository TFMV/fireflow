<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.fireflow.engine.impl.JoinPoint" table="T_FF_RT_JOINPOINT">
		<id name="id" type="java.lang.String">
			<column name="ID" length="50"/>
			<generator class="uuid.hex"/>
		</id>
		<property name="synchronizerId" type="java.lang.String" update="false">
			<column name="SYNCHRONIZER_ID" length="50" not-null="true" />
		</property>		
		<property name="value" type="java.lang.Integer">
			<column name="VALUE"/>
		</property>
		<property name="alive" type="java.lang.Boolean">
			<column name="ALIVE"/>
		</property>
		
		<set name="appointedTransitionNames" 
			table="T_FF_RT_APPOINTED_TRANSITION_NAME"
			lazy="false">
			<key column="JOINPOINT_ID"/>
			<element column="TRANSITION_NAME" type="java.lang.String" not-null="true"/>
		</set>
		
		<many-to-one 
		    name="processInstance"
        	column="PROCESSINSTANCE_ID"
        	class="org.fireflow.engine.impl.ProcessInstance"
        	update="false"
        	not-null="true"
        	lazy="false"
        	cascade="none"/>
	</class>
</hibernate-mapping>